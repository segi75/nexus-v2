server:
  port: 8080

spring:
  application:
    name: nexus-sample-app
  
  # [1] H2 Database 설정 (가볍고 빠른 검증용)
  datasource:
    driver-class-name: org.h2.Driver
    url: jdbc:h2:mem:nexus;DB_CLOSE_DELAY=-1;MODE=MSSQLServer # MSSQL 호환 모드
    username: sa
    password:
  
  # H2 콘솔 활성화 (http://localhost:8080/h2-console)
  h2:
    console:
      enabled: true
      path: /h2-console

# [2] NEXUS MyBatis 설정
mybatis:
  mapper-locations: classpath:mapper/**/*.xml  # SQL XML 위치 지정
  type-aliases-package: com.nexus.sample       # DTO/Entity 별칭 스캔
  configuration:
    map-underscore-to-camel-case: true         # db_column -> javaField 자동 매핑
    jdbc-type-for-null: NULL

# [3] 로깅 설정 (우리가 만든 모듈 디버깅용)
logging:
  level:
    root: INFO
    com.nexus: DEBUG            # 프레임워크 내부 동작 확인
    com.nexus.sample: DEBUG     # 샘플 앱 로직 확인
  pattern:
    console: "%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level %pid [%thread] %logger{36} : %msg%n"