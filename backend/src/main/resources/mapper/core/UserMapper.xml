<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nexus.backend.domain.user.UserMapper">

    <select id="findByUserId" resultType="com.nexus.backend.domain.user.NxUser">
        SELECT 
            USER_ID,
            USER_PW,
            USER_NM,
            ROLES,
            REG_DT,
            REG_ID
        FROM NX_USER
        WHERE USER_ID = #{userId}
    </select>

    <insert id="save" parameterType="com.nexus.backend.domain.user.NxUser">
        INSERT INTO NX_USER (
            USER_ID, 
            USER_PW, 
            USER_NM, 
            ROLES, 
            REG_ID, 
            REG_DT
        ) VALUES (
            #{userId}, 
            #{userPw}, 
            #{userNm}, 
            #{roles}, 
            #{regId}, 
            NOW()
        )
    </insert>

</mapper>